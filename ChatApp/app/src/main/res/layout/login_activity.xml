<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mess_app"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/user_edit_text"
        android:textSize="50dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        />

    <EditText
        android:id="@+id/user_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:inputType="text"
        android:textColor="#FFF"
        android:cursorVisible="true"
        android:hint="@string/user_name"
        android:padding="10dp"
        android:layout_marginHorizontal="50dp"
        />

    <EditText
        android:id="@+id/pw_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:cursorVisible="true"
        android:hint="@string/pass_word"
        android:layout_below="@id/user_edit_text"
        android:padding="10dp"
        android:layout_marginHorizontal="50dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:id="@+id/signin_btn"
        android:layout_below="@id/pw_edit_text"
        android:padding="10dp"
        android:layout_marginHorizontal="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn"
        android:text="@string/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signin_btn"
        android:layout_marginTop="130dp"
        />

</RelativeLayout>