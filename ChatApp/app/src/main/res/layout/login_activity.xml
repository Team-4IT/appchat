<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue">
    
    <TextView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:hint="@string/user_name"
        android:layout_above="@id/user_edit_text"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/user_edit_text"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:inputType="text"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:hint="@string/pass_word"
        android:layout_below="@id/user_edit_text"
        android:layout_centerHorizontal="true"
        android:id="@+id/pw_txt"
        />

    <EditText
        android:id="@+id/pw_edit_text"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="@string/pass_word"
        android:inputType="textPassword"
        android:layout_below="@id/pw_txt"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:id="@+id/login_btn"
        android:layout_below="@id/pw_edit_text"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="110dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn"
        android:text="@string/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="140dp"
        />

</RelativeLayout>